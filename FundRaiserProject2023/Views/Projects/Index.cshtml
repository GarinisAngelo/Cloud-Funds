@model IEnumerable<FundRaiserProject2023.Models.Project>

@{
    ViewData["Title"] = "All Projects";
    Layout = "_ProjectCreatorLayout";
}

<h1>Projects</h1>

<p>
    <a asp-action="Create" class="btn">Create New</a>
</p>
<table class="table">
    <thead style="color:azure !important">
        <tr>
            <th style="color:azure !important">
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th style="color:azure !important">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th style="color:azure !important">
                @Html.DisplayNameFor(model => model.FundingGoal)
            </th>
            <th style="color:azure !important">
                @Html.DisplayNameFor(model => model.CurrentFunding)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr style="color:azure !important">
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FundingGoal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentFunding)
            </td>
            <td class="center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn details">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn delete">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
