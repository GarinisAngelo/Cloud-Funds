@model IEnumerable<FundRaiserProject2023.Models.Category>

@{
    ViewData["Title"] = "All Categories";
    Layout = "_ProjectCreatorLayout";
}

<h1>Categories</h1>

<p>
    <a asp-action="Create" class="btn">Create New</a>
</p>
<table class="table">
    <thead>
        <tr style ="color:azure !important">
            <th style="color:azure !important">
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td style="color:azure !important">
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn">Edit</a> 
                    |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn delete">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
