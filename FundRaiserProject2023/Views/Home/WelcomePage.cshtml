@{
	Layout = "_WelcomeLayout";
	ViewData["Title"] = "Welcome to our Page!";		
}

<!DOCTYPE html>
<html>
<head>
  <title>Welcome Page</title>
  <style>

:root {
	--primary-color: #3a4052;
}

* {
	box-sizing: border-box;
	margin: 0;
	padding: 0;
}

body {
	font-family: 'Open Sans', sans-serif;
	line-height: 1.5;
}

a {
	text-decoration: none;
	color: var(--primary-color);
}

h1 {
	font-weight: 300;
	font-size: 60px;
	line-height: 1.2;
	margin-bottom: 15px;
}

.showcase {
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
	text-align: center;
	color: #fff;
}

.video-container {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	overflow: hidden;
}

.video-container video {
	width: 100%;
	height: 100%;
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	object-fit: cover;
}

.video-container:after {
	content: '';
	z-index: 1;
	height: 100%;
	width: 100%;
	top: 0;
	left: 0;
	background: rgba(0, 0, 0, 0.3);
	position: absolute;
}

.content {
	z-index: 2;
}

.btn {
	display: inline-block;
	padding: 7px 0px;
	background: var(--primary-color);
	color: #ff0;
	border-radius: 60px;
	border: solid #000 3px;
	opacity: 0.7;
	text-align: center;
	line-height: 28px;
	height: 45px;
	width: 180px;
}

.btn + .btn {
	margin-left: 50px; /* Adjust this value to increase or decrease the space between buttons */
}

.btn:hover {
	transform: scale(0.90);
}
  </style>
</head>
<body>
    <section class="showcase">
		<div class="video-container">
			<video src="~/PhotosVideos/nezuko-running-kimetsu-no-yaiba.3840x2160.mp4" autoplay muted loop></video>
		</div>
		<div class="content">
			<h1>Welcome to our Fundraiser</h1>
			<h3>Lets all help Nezuko-chan become human again!</h3>
			<a href="@Url.Action("Index", "ProjectCreators")" class="btn">Project Creator</a>
			<a href="@Url.Action("BackerHomePage", "Backers")" class="btn">Backer</a>
		</div>
	</section>
</body>
</html>